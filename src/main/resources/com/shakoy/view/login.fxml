<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.shakoy.controller.AuthController"
      alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to bottom, #f8fafc, #e2e8f0);">

    <padding>
        <Insets top="40" right="40" bottom="40" left="40"/>
    </padding>

    <!-- Login Card -->
    <VBox alignment="CENTER" spacing="25" style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 5); -fx-padding: 40;"
          minWidth="400" minHeight="500" maxWidth="450">
        <VBox.margin>
            <Insets top="0" right="0" bottom="0" left="0"/>
        </VBox.margin>

        <!-- Logo/Title -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="Shakoy" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2563eb;"/>
            <Label text="Task Management System" style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
        </VBox>

        <!-- Login Form -->
        <VBox spacing="15" prefWidth="300">
            <!-- Username Field -->
            <VBox spacing="5">
                <Label text="Username" style="-fx-font-size: 13px; -fx-text-fill: #475569; -fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" promptText="Enter username"
                          style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Password Field -->
            <VBox spacing="5">
                <Label text="Password" style="-fx-font-size: 13px; -fx-text-fill: #475569; -fx-font-weight: bold;"/>
                <PasswordField fx:id="passwordField" promptText="Enter password"
                              style="-fx-background-color: #f8fafc; -fx-border-color: #e2e8f0; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 12; -fx-font-size: 14px;"/>
            </VBox>

            <!-- Error Message -->
            <Label fx:id="msg" textFill="#ef4444" wrapText="true" style="-fx-font-size: 13px;"/>

            <!-- Login Button -->
            <Button fx:id="loginBtn" text="Login" defaultButton="true" onAction="#onLogin"
                    style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"
                    prefWidth="Infinity" prefHeight="45"/>

            <!-- Register Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?" style="-fx-font-size: 13px; -fx-text-fill: #64748b;"/>
                <Hyperlink fx:id="registerLink" text="Register" onAction="#onRegister"
                          style="-fx-text-fill: #2563eb; -fx-font-size: 13px; -fx-font-weight: bold;"/>
            </HBox>
        </VBox>

    </VBox>

</VBox>